@page
@model VTET.RazorWebApp.Pages.OrderDetail.IndexModel
@{
    ViewData["Title"] = "OrderDetail page";
    var orderdetails = Model.OrderDetails;
}

<div class="text-center">
    <h1 class="display-6">OrderDetail management</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="addOrderDetail();">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">OrderDetailId</th>
                    <th class="card-title text-center">WatchId</th>
                    <th class="card-title text-center">OrderId</th>
                    <th class="card-title text-center">Price</th>
                    <th class="card-title text-center">Amount</th>
                    <th class="card-title text-center"></th>
                </tr>
            </thead>
            <tbody class="tblorderdetailList">
                @if (orderdetails != null && orderdetails.Count > 0)
                {
                    foreach (var orderdetail in orderdetails)
                    {
                        <tr>
                            <td>@orderdetail.OrderDetailId</td>
                            <td>@orderdetail.WatchId</td>
                            <td>@orderdetail.OrderId</td>
                            <td>@orderdetail.Price</td>
                            <td>@orderdetail.Amount</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-warning" onclick="editOrderDetail(@orderdetail.OrderDetailId)">Edit</button>
                                @using (Html.BeginForm("Delete", "OrderDetail", new { id = orderdetail.OrderDetailId }, FormMethod.Post))
                                {
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No Order Details available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="orderdetailModal" tabindex="-1" aria-labelledby="orderdetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Edit", "OrderDetail", FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="orderdetailModalLabel">OrderDetail Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="orderdetailModalContent">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="OrderDetailId">OrderDetailId</label>
                                <input asp-for="OrderDetail.OrderDetailId" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label for="OrderId">OrderId</label>
                                <input asp-for="OrderDetail.OrderId" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label for="WatchId">WatchId</label>
                                <input asp-for="OrderDetail.WatchId" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label for="Price">Price</label>
                                <input asp-for="OrderDetail.Price" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label for="Amount">Amount</label>
                                <input asp-for="OrderDetail.Amount" class="form-control" />
                            </div>
                            <div class="col-md-12">
                                <label>@Model.Message</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function addOrderDetail() {
            $('#frm').attr('action', '@Url.Page("/OrderDetail/Index")');
            $('#orderdetailModal').modal('show');
        }

        function editOrderDetail(id) {
            $.get('@Url.Page("/OrderDetail/Index", new { handler = "Edit" })', { id: id }, function (data) {
                var result = $(data).find('#orderdetailModalContent').html();
                $('#orderdetailModalContent').html(result);
                $('#frm').attr('action', '@Url.Page("/OrderDetail/Index", new { handler = "Edit" })');
                $('#orderdetailModal').modal('show');
            });
        }

        $('#frm').on('submit', function (event) {
            event.preventDefault();
            $.ajax({
                type: 'POST',
                url: $(this).attr('action'),
                data: $(this).serialize(),
                success: function (response) {
                    $('#orderdetailModal').modal('hide');
                    location.reload(); // Reload the page to see the updated data
                },
                error: function () {
                    alert('An error occurred while saving the order detail.');
                }
            });
        });
    </script>
}
