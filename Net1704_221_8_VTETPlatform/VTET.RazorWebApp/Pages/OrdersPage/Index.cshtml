<form method="get" id="searchForm">
    <div class="row g-3">
        <div class="col-md-4 col-lg-3">
            <label for="orderEmailSearch" class="form-label">Order Email</label>
            <input type="text" name="orderEmailSearch" id="orderEmailSearch" value="@Request.Query["orderEmailSearch"]" class="form-control" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="orderFullNameSearch" class="form-label">Order Full Name</label>
            <input type="text" name="orderFullNameSearch" id="orderFullNameSearch" value="@Request.Query["orderFullNameSearch"]" class="form-control" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="customerFullNameSearch" class="form-label">Customer Full Name</label>
            <input type="text" name="customerFullNameSearch" id="customerFullNameSearch" value="@Request.Query["customerFullNameSearch"]" class="form-control" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="phoneNumberSearch" class="form-label">Phone Number</label>
            <input type="text" name="phoneNumberSearch" id="phoneNumberSearch" value="@Request.Query["phoneNumberSearch"]" class="form-control" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="totalPriceSearch" class="form-label">Total Price</label>
            <input type="number" step="0.01" name="totalPriceSearch" id="totalPriceSearch" value="@Request.Query["totalPriceSearch"]" class="form-control" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="dateSearch" class="form-label">Date</label>
            <input type="date" name="dateSearch" id="dateSearch" value="@Model.DateSearch?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="addressSearch" class="form-label">Address</label>
            <input type="text" name="addressSearch" id="addressSearch" value="@Request.Query["addressSearch"]" class="form-control" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="notesSearch" class="form-label">Notes</label>
            <input type="text" name="notesSearch" id="notesSearch" value="@Request.Query["notesSearch"]" class="form-control" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="paymentMethodSearch" class="form-label">Payment Method</label>
            <input type="text" name="paymentMethodSearch" id="paymentMethodSearch" value="@Request.Query["paymentMethodSearch"]" class="form-control" />
        </div>
        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">Search</button>
            <button type="button" id="clearButton" class="btn btn-secondary">Clear</button>
        </div>
    </div>
</form>

<script>
    document.getElementById('clearButton').addEventListener('click', function () {
        var inputs = document.getElementById('searchForm').getElementsByTagName('input');
        for (var i = 0; i < inputs.length; i++) {
            inputs[i].value = '';
        }
        document.getElementById('searchForm').submit();
    });
</script>




<div class="my-3 text-end">
    <a asp-page="Create" class="btn btn-success">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Order[0].Id)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].Date)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].TotalPrice)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].Customer)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].Address)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].Notes)</th>
            <th>@Html.DisplayNameFor(model => model.Order[0].PaymentMethod)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Order != null && Model.Order.Count > 0)
        {
            @foreach (var item in Model.Order)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.Customer.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                    <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="location.href='@Url.Page("./Edit", new { id = item.Id })'">Edit</button> |
                        <button class="btn btn-sm btn-info" onclick="location.href='@Url.Page("./Details", new { id = item.Id })'">Details</button> |
                        <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex - 1)"
                   asp-route-orderEmailSearch="@Model.OrderEmailSearch"
                   asp-route-orderFullNameSearch="@Model.OrderFullNameSearch"
                   asp-route-customerFullNameSearch="@Model.CustomerFullNameSearch"
                   asp-route-phoneNumberSearch="@Model.PhoneNumberSearch"
                   asp-route-totalPriceSearch="@Model.TotalPriceSearch"
                   asp-route-dateSearch="@Model.DateSearch?.ToString("yyyy-MM-dd")"
                   asp-route-addressSearch="@Model.AddressSearch"
                   asp-route-notesSearch="@Model.NotesSearch"
                   asp-route-paymentMethodSearch="@Model.PaymentMethodSearch">Previous</a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-pageIndex="@i"
                       asp-route-orderEmailSearch="@Model.OrderEmailSearch"
                       asp-route-orderFullNameSearch="@Model.OrderFullNameSearch"
                       asp-route-customerFullNameSearch="@Model.CustomerFullNameSearch"
                       asp-route-phoneNumberSearch="@Model.PhoneNumberSearch"
                       asp-route-totalPriceSearch="@Model.TotalPriceSearch"
                       asp-route-dateSearch="@Model.DateSearch?.ToString("yyyy-MM-dd")"
                       asp-route-addressSearch="@Model.AddressSearch"
                       asp-route-notesSearch="@Model.NotesSearch"
                       asp-route-paymentMethodSearch="@Model.PaymentMethodSearch">@i</a>
                </li>
            }
            <li class="page-item @(Model.PageIndex >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex + 1)"
                   asp-route-orderEmailSearch="@Model.OrderEmailSearch"
                   asp-route-orderFullNameSearch="@Model.OrderFullNameSearch"
                   asp-route-customerFullNameSearch="@Model.CustomerFullNameSearch"
                   asp-route-phoneNumberSearch="@Model.PhoneNumberSearch"
                   asp-route-totalPriceSearch="@Model.TotalPriceSearch"
                   asp-route-dateSearch="@Model.DateSearch?.ToString("yyyy-MM-dd")"
                   asp-route-addressSearch="@Model.AddressSearch"
                   asp-route-notesSearch="@Model.NotesSearch"
                   asp-route-paymentMethodSearch="@Model.PaymentMethodSearch">Next</a>
            </li>
        </ul>
    </nav>
}