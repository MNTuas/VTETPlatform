@page
@model VTET.RazorWebApp.Pages.HomePageModel
@{
    var watchs = Model.Watches;
    var evaluations = Model.Evaluations;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <style>
        .disabled-link {
            pointer-events: none;
            opacity: 0.6;
            cursor: not-allowed;
        }
        .bg-dark {
            background-image: url('https://i.pinimg.com/736x/cf/aa/35/cfaa35e5bcfe32fdf9072bb298b1c4b7.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: white;
        }
        .py-5 {
            padding-top: 3rem;
            padding-bottom: 3rem;
        }
        html, body {
            height: 100%;
            margin: 0;
        }
        .full-height {
            height: 100%;
        }
        .sidebar {
            height: 100%;
            overflow-y: auto;
        }
        .content {
            height: 100%;
            overflow-y: auto;
            padding-top: 2rem;
        }
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .card-img-top {
            object-fit: cover;
            height: 200px;
        }
    </style>
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="px-4 px-lg-5 container">
            <img style="height:80px" src="https://thumbs.dreamstime.com/b/watches-frame-logo-design-template-isolated-white-background-watches-frame-logo-design-template-isolated-white-background-271940994.jpg" />
            <a class="navbar-brand" href="#!">VTET PLATFORM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0 ms-lg-4 me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/CustomerPage/Index">Customerrrrrr</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Watch/Index">Watch</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Evaluation">Evaluation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/OrdersPage/Index">Order</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/OrderDetailPage/Index">OrderDetail</a>
                    </li>
                </ul>
                <form class="d-flex">
                <button class="btn btn-outline-dark" type="submit">
                    
                    <a class="btn btn-outline-dark mt-auto" asp-page="./Watch/AddWatch">Sell Your Watch Here</a>
                    
                </button>
                </form>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="px-4 px-lg-5 my-5 container">
            <div class="text-white text-center">
                <h1 class="display-4 fw-bolder">NEW ARRIVAL</h1>
                <p class="lead fw-normal text-white-50 mb-0">Shop Now</p>
            </div>
        </div>
    </header>

    <div class="container-fluid full-height">
        <div class="row full-height">
            <!-- Sidebar filter -->
            <form class="col-lg-3 sidebar p-4">
                <div class="p-4 rounded border">
                    <h4 class="fw-bolder">Filter By</h4>
                    <hr>
                    <!-- FullName filter -->
                    <input type="text" name="SearchFullName" class="form-control mb-3" value="@(Model.SearchFullName)" placeholder="FullName here..." aria-describedby="fullNameHelp" />
                    <!-- Type filter -->
                    <select name="SearchType" class="form-control mb-3">
                        <option value="" disabled selected hidden>TYPE</option>
                        <option value="OLD" >OLD</option>
                        <option value="NEW" >NEW</option>
                    </select>
                    <!-- Price filter -->
                    <input type="text" name="SearchPrice" class="form-control mb-3" value="@(Model.SearchPrice)" placeholder="Price here..." aria-describedby="priceHelp" />
                    <!-- Brand filter -->
                    <input type="text" name="SearchBrand" class="form-control mb-3" value="@(Model.SearchBrand)" placeholder="Brand here..." aria-describedby="brandHelp" />
                    <button type="submit" id="search" class="btn btn-danger d-flex align-items-center w-100">
                        Search
                        <i class="fa fa-search ms-2" aria-hidden="true"></i>
                    </button>
                </div>
            </form>
            <!-- Main content -->
            <div class="col-lg-9 content">
                <div class="px-4 px-lg-5 mt-5">
                    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                        @if (watchs != null && watchs.Count > 0)
                        {
                            foreach (var watch in watchs)
                            {
                                <div class="col mb-5 d-flex">
                                    <div class="card h-100 d-flex flex-column">
                                        <!-- Product image-->
                                        <img class="card-img-top" src="@watch.Picture" alt="Watch image" />
                                        <!-- Product details-->
                                        <div class="card-body p-4 d-flex flex-column">
                                            <div class="text-center">
                                                <!-- Product name-->
                                                <h5 class="fw-bolder">@watch.FullName</h5>
                                                <p style="color:red" class="fw-bolder">@watch.Type - @watch.Brand</p>
                                                <!-- Product price-->
                                                <p>@watch.Price - @watch.EstimatePrice</p>
                                                <p class="fw-bolder">@watch.Status</p>
                                            </div>
                                        </div>
                                        <!-- Product actions-->
                                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent mt-auto">
                                            <div class="text-center">

                                                <a id="buy" class="btn btn-outline-dark mt-auto" asp-page="/OrdersPage/Create" asp-route-watchId="@watch.Id" >Buy</a>
                                                <a class="btn btn-outline-dark mt-auto" asp-page="./Watch/WatchDetail" asp-route-id="@watch.Id" >Detail</a>
                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="./HomePage" asp-route-currentPage="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-white text-center">Copyright &copy; Your Website 2023</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
</html>

<script>
    var link = document.getElementById("buy");

    // Điều chỉnh dựa trên trạng thái
    if (watchStatus === "pending") {
        link.classList.add("disabled-link");
        link.href = "#"; // Ngăn không cho liên kết hoạt động
    } else {
        link.classList.remove("disabled-link");
        link.href = "/OrdersPage/Create?watchId=" + encodeURIComponent(link.getAttribute('asp-route-watchId')); // Hoặc giữ lại liên kết gốc
    }
</script>
