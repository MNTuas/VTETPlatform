@section scripts
{
    <script type="text/javascript">
        function addevaluation() {
            $('#frm').attr('action', '@Url.Page("/evaluation/Index")');
            $('#evaluationModal').modal('show');
        }

        function editevaluation(id) {
            $.get('@Url.Page("/evaluation/Index", new { handler = "Edit" })', { id: id }, function (data) {
                var result = $(data).find('#evaluationModalContent').html();
                $('#evaluationModalContent').html(result);
                $('#frm').attr('action', '@Url.Page("/evaluation/Index", new { handler = "Edit" })');
                $('#evaluationModal').modal('show');
            });
        }

        $('#frm').on('submit', function (event) {
            event.preventDefault();
            $.ajax({
                type: 'POST',
                url: $(this).attr('action'),
                data: $(this).serialize(),
                success: function (response) {
                    $('#evaluationModal').modal('hide');
                    location.reload(); // Reload the page to see the updated data
                },
                error: function () {
                    alert('An error occurred while saving the order detail.');
                }
            });
        });
    </script>
}

