@model VTET.RazorWebApp.Pages.EvaluationModel
@{
    ViewData["Title"] = "evaluation page";
    var evaluations = Model.Evaluations;
}

<div class="text-center">
    <h1 class="display-6">Evaluation management</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="addevaluation();">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table-striped table-bordered table-hover table">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">Id</th>
                    <th class="card-title text-center">WatchId</th>
                    <th class="card-title text-center">Comment</th>
                    <th class="card-title text-center">Rate</th>
                    <th class="card-title text-center">EstimatePrice</th>
                    <th class="card-title text-center">CreateDate</th>
                    <th class="card-title text-center">CreateBy</th>
                    <th class="card-title text-center"></th>
                </tr>
            </thead>
            <tbody class="tblevaluationList">
                @if (evaluations != null && evaluations.Count > 0)
                {
                    foreach (var evaluation in evaluations)
                    {
                        <tr>
                            <td>@evaluation.Id</td>
                            <td>@evaluation.WatchId</td>
                            <td>@evaluation.Comment</td>
                            <td>@evaluation.Rate</td>
                            <td>@evaluation.EstimatePrice</td>
                            <td>@evaluation.CreateDate</td>
                            <td>@evaluation.CreateBy</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-warning" onclick="editevaluation(@evaluation.Id)">Edit</button>
                                @using (Html.BeginForm("Delete", "evaluation", new { id = evaluation.Id }, FormMethod.Post))
                                {
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No Order Details available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

